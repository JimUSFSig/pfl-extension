{
  "compilerOptions": {
    "target": "ES2022",
    "types": ["chrome", "webextension-polyfill"],
    "lib": ["DOM", "ESNext", "WebWorker"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "outDir": "dist",
    "rootDir": "src",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowJs": true,
    "checkJs": true
  },
  "include": ["src"]
}